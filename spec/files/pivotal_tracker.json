{
  "swagger": "2.0",

  "info": {
    "title": "PivotalTracker",
    "description": "Agile project management tool for software teams",
    "version": "5"
  },

  "host": "www.pivotaltracker.com",

  "basePath": "/services/v5",

  "schemes": ["https"],

  "produces": ["application/json"],

  "paths": {
    "/projects/{projectId}/stories": {
      "post": {
        "summary": "Create a new story",
        "externalDocs": {
          "url": "https://www.pivotaltracker.com/help/api/rest/v5#projects_project_id_stories_post"
        },
        "operationId": "createStory",
        "parameters": [
          {
            "name": "projectId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "story",
            "in": "body",
            "required": true,
            "schema": "NewStory"
          }
        ]
      }
    }
  },

  "definitions": {
    "NewStory": {
      "title": "New Story",
      "type": "object",
      "properties": {
        "cl_numbers": { "type": "string" },
        "current_state": {
          "type": "string",
          "enum": [
            "accepted",
            "delivered",
            "finished",
            "started",
            "rejected",
            "unstarted",
            "unscheduled"
          ]
        },
        "external_id": { "type": "string" },
        "deadline": { "type": "string" },
        "description": { "type": "string" },
        "estimate": { "type": "string" },
        "integration_id": { "type": "string" },
        "planned_iteration_number": { "type": "string" },
        "requested_by_id": { "type": "string" },
        "accepted_at": { "type": "string" },
        "before_id": { "type": "string" },
        "created_at": { "type": "string" },
        "after_id": { "type": "string" },
        "name": { "type": "string" },
        "story_type": {
          "type": "string",
          "enum": [ "feature", "bug", "chore", "release" ]
        }
      },
      "required": [ "name" ]
    }
  },

  "securityDefinitions": {
    "apiToken": {
      "type": "apiKey",
      "name": "X-TrackerToken",
      "in": "header"
    }
  },

  "security": [
    {
      "apiToken": []
    } 
  ]
}
